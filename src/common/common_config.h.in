/*
 * Common settings for client's and server's parsers.
 */

typedef struct common_config_t {
	/**
	 * Selected runtime options are represented by single bits set to 1.
	 */
	uint32_t selected_options;
	/**
	 * Server's listening port.
	 */
	uint16_t port;
} common_config_t;

inline int is_option_set(uint32_t selected_options, int opt) {
	return IS_SETBIT(selected_options, opt);
}

